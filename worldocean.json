{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 425,
  "title": "No. of Gold Medals won by each country (2004 & 2008)",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/manojlah/Test/main/worldgrat.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "white", "stroke": "gray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/manojlah/Test/main/worldgrat.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "grey"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/manojlah/Test/main/goldmedalworld.csv"
      },
      "mark": {"type": "point", "tooltip": {"content": "data"}, "filled": true},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "Gold_Medals",
          "type": "quantitative",
          "title": "No. of Gold Medals",
          "scale": {"domain": [1, 10, 60]},
          "legend": {
            "padding": 10,
            "symbolFillColor": "grey",
            "titlePadding": 8
          }
        },
        "color": {
          "field": "continent",
          "type": "nominal",
          "title": "Continents",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#1a75ff",
              "#00cc00",
              "#e6e600",
              "#ff6699",
              "#660000",
              "#ffa64d"
            ]
          },
          "legend": {"padding": 10, "titlePadding": 8}
        },
        "opacity": {
          "condition": {"param": "conti", "value": 0.8},
          "value": 0.1
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "Gold_Medals",
            "type": "quantitative",
            "title": "Gold Medals"
          }
        ]
      },
      "params": [
        {
          "name": "conti",
          "select": {"type": "point", "fields": ["continent"]},
          "bind": "legend"
        }
      ]
    }
  ],
  "config": {}
}